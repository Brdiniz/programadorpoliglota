		<% @tags.each do |tag| %>
			Tag: <%= tag.name %> <br />

			Tweets: 
			<div>
				<ul>
				<% @tweets[tag.name].each do |t| %>					
					<li>
						<a href="http://www.twitter.com/<%=t.user.twitter_id%>"><img src='<%=t.user.image_url %>' width='48' height='48'/></a> || <a href="http://www.twitter.com/<%=t.user.twitter_id%>"><%= t.user.twitter_id %></a> -- <%= t.text %><br />
						<small>twittado em <%= t.date.strftime('%d/%m/%Y %H:%M') %></small>
					</li>
				<% end %>
				</ul>
				<%= next_page_link(2, tag)%>
			</div>
			Links: 
			<ul>
			<% @links[tag.name].each do |l| %>					
				<li>
					<%= l.quantity %> -- <%= l.title%> <a href="<%= l.url %>"><%= l.url %></a>
				</li>
			<% end%>
			</ul>
			<hr />
		<% end %>
		<script type="text/javascript">
			$(function() {
				registerEvent();
			});
			
			function registerEvent() {
				$(".ver_mais").click(function() {
					elemento = $(this);
					url = $(this).attr('href');
					$.get(url, function(data) {
						elemento.parent().replaceWith(data);
						registerEvent();
					});
					return false;
				});
			}
		</script>