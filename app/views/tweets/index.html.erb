<div id="contentPP" class="size1">
  <% @tags.each do |tag| %>
    <div class="size3 bSpace01 fLeft lang0<%=tag.id %>">
      <h2 class="headerLang"><%=tag.name%></h2>
      <div class="shapeLang">	
		<ul class="newsLang">
		   <% @tweets[tag.name].each do |t| %>					
			   <%= render :partial=>'tweet_information', :locals=>{:tweet => t} %>
		   <% end %>
        </ul>
        <%= next_page_link(1, tag.id) %>
        <div class="linkLang">
          <h3><%=tag.name %> links</h3>
	        <ul>
	          <% @links[tag.name].each do |l| %>					
              <li style="min-height:45px;">
			          <%= l.quantity %> -- <%= l.title%> <a target="blank" href="<%= l.url %>"><%= l.url %></a>
		          </li>
	          <% end%>
	        </ul>
        </div>
		<div class="retweetedPeopleLang">
			<% @retweeted_users[tag.name].each do |ru| %>
				<a target="blank" href="http://www.twitter.com/<%=ru.user.twitter_id%>">
			    	<img src='<%= image_url_of(ru.user) %>' style="width:48px; height:48px;">
				</a>
			<% end %>
		</div>
      </div>
    </div>
  <% end %>
	<a class="moreLangOptions size1_null" href="http://twitter.com/?status=@progpoliglota"><span>Alguma linguagem faltando? Solicite mais linguagens.</span></a>
</div>
<script type="text/javascript">
	$(function() {
		registerEvent();
	});
	
	function registerEvent() {
		$(".ver_mais").click(function() {
			elemento = $(this);
			url = $(this).attr('href');
      $.get(url, function(data) {
        div = elemento.parent();
        div.find('.ver_mais').remove();
				div.find('.newsLang').replaceWith(data);
				registerEvent();
			});
			return false;
		});
	}
</script>