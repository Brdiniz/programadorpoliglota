		<% @tags.each do |tag| %>
			Tag: <%= tag.name %> <br />

			Tweets: 
			<ul>
			<% @tweets[tag.name].each do |t| %>					
				<li>
					<a href="http://www.twitter.com/<%=t.user%>"><img src='<%=t.image_url %>' width='48' height='48'/></a> || <a href="http://www.twitter.com/<%=t.user%>"><%= t.user %></a> -- <%= t.text %><br />
					<small>twittado em <%= t.date.strftime('%d/%m/%Y %H:%M') %></small>
				</li>
			<% end%>
			</ul>
			
			Links: 
			<ul>
			<% @links[tag.name].each do |l| %>					
				<li>
					<%= l.quantity %> -- <a href="<%= l.url %>"><%= l.url %></a>
				</li>
			<% end%>
			</ul>
			<hr />
		<% end %>